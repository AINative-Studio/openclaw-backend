# Datadog Observability Configuration for AgentClaw
# Copy to .env and fill in your Datadog API key

DD_API_KEY=your_api_key_here
DD_APP_KEY=your_app_key_here
DD_SITE=datadoghq.com
DD_SERVICE=agentclaw-backend
DD_ENV=development
DD_VERSION=1.0.0

# LLM Observability
DD_LLMOBS_ENABLED=1
DD_LLMOBS_ML_APP=agentclaw
DD_LLMOBS_AGENTLESS_ENABLED=1

